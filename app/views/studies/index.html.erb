
<h1>Listing studies</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @studies.each do |study| %>
    <tr>
      <td><%= study.title %></td>
      <td><%= study.text %></td>
      <td><%= link_to 'Show', study_path(study) %></td>
      <td><%= link_to 'Edit', edit_study_path(study) %></td>
      <td><%= link_to 'Destroy', study_path(study),
              method: :delete,
              data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>
